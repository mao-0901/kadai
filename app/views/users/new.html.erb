<main id="user-new">
    <div class="container">
        <div class="columns">
            <div class="column is-half is-offset-one-quarter">
                <div class="box">
                    <h1 class="title has-text-centered is-size-4">新規登録</h1>
                    <hr>
                    <%= form_for(@user, url: users_path, html: { medhod: :post }) do |f| %>
                        <% if @user.errors.any? %>
                            <div class="notification is-danger">
                                <ul>
                                    <% @user.errors.full_messages.each do |message| %>
                                        <li><%= message %></li>
                                    <% end %>
                                </ul>
                            </div>
                        <% end %>

                        <div class="field">
                            <label class="label">ユーザー名</label>
                                <%= f.text_field :username, class: "input", placeholder: 'Username', autocomplete: :off %>
                        </div>

                        <div class="field">
                            <label class="label">メールアドレス</label>
                                <%= f.email_field :email, class: "input", placeholder: 'Email', autocomplete: :off %>
                        </div>

                        <div class="field">
                            <label class="label">パスワード</label>
                                <%= f.password_field :password, class: "input", placeholder: 'Password', autocomplete: :off %>
                        </div>

                        <div class="field">
                            <label class="label">パスワード(確認)</label>
                                <%= f.password_field :password_confirmation, class: "input", placeholder: 'Confirm Password', autocomplete: :off %>
                        </div>
                        
                        <hr>

                        <div class="field is-grouped is-grouped-centered">
                            <input type="submit" class="btn btn-primary btn-sm" value="送信">
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <a class='text-info' href="/welcome" >アカウントをお持ちの方はこちら</a>
</main>

